<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-white">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img class="" alt="Greenwich Butchers" src="~/Images/GreenwichButchersLogo.png" style="height:70px; width:auto" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    @if (CUser.UserRole == "Manager")
                    {
                        @* Product *@
                        <li class="nav-item">
                            <div class="col nav-link">
                                <a class="font-weight-bold mr-0 pr-0 rmoveUnderline text-secondary" href="/Product">Products</a>
                                <a class="ml-1 p-0 dropdown-toggle dropdown-toggle-split" id="Products" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">.</a>
                                <div class="dropdown-menu" aria-labelledby="Products">
                                    <a class="font-weight-bold text-secondary dropdown-item" href="/Product/AndStockEdit" aria-selected="true">Edit Product/Stock</a>
                                    <a class="font-weight-bold text-secondary dropdown-item" href="/Product/Add" aria-selected="false">Add Product</a>
                                    <a class="font-weight-bold text-secondary dropdown-item" href="/Product/Category" aria-selected="false">Category</a>
                                    <a class="font-weight-bold text-secondary dropdown-item" href="/Product/StockLocation" aria-selected="false">Stock Location</a>
                                </div>
                            </div>
                        </li>
                    }
                    @* Customers *@
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold text-secondary font-weight-bold" href="/Customers">Customers</a>
                    </li>
                    @* Orders *@
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold text-secondary font-weight-bold" href="/Order">Order</a>
                    </li>
                    @* Suppliers *@
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold text-secondary font-weight-bold" href="/Suppliers">Supplier</a>
                    </li>
                    @if (CUser.UserRole == "Manager")
                    {
                        @* Employee *@
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold text-secondary font-weight-bold" href="/Employees">Employees</a>
                        </li>
                        @* Business Stats *@
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold text-secondary font-weight-bold" href="/BusinessStats">Business Stats</a>
                        </li>
                    }
                    <li class="nav-item mt-2 ml-auto"></li>
                    @if ((bool)CUser.LoginStatus)
                    {
                        @* My Account drop-down menu *@
                        <li class="nav-item">
                            <div class="col">
                                <a class="nav-link text-secondary font-weight-bold dropdown-toggle" id="MyAccount" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img id="imgAccount" src="~/Images/Account.png" alt="" style="width:25px; height:25px;" />
                                    <small for="imgAccount">Account</small>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="MyAccount">
                                    <a class="nav-link font-weight-bold text-secondary" href="/Account">My Account</a>
                                    <a class="nav-link font-weight-bold text-secondary" href="/Login?handler=Logout">Logout</a>
                                </div>
                            </div>
                        </li>
                    }
                    @if (!(bool)CUser.LoginStatus)
                    {
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold " asp-area="" asp-page="/Login">Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>