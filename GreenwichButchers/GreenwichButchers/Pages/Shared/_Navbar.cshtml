<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 bg-white">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">
                <img class="" alt="Greenwich Butchers" src="~/Images/GreenwichButchersLogo.png" style="max-height:70px; width:auto" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link font-weight-bold" href="/Shop">Shop</a>
                    </li>
                    <li class="nav-item mt-2 ml-auto"></li>
                    @if ((bool)CUser.LoginStatus)
                    {
                        @* My Account drop-down menu *@
                        <li class="nav-item">
                            <div class="col">
                                <a class="nav-link font-weight-bold dropdown-toggle" id="MyAccount" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <img id="imgAccount" src="~/Images/Account.png" alt="" style="width:25px; height:25px;" />
                                    <small for="imgAccount">Account</small>
                                </a>
                                <div class="dropdown-menu" aria-labelledby="MyAccount">
                                    <a class="nav-link" href="/Customer/Account">My Account</a>
                                    <a class="nav-link" href="/Order">My Orders</a>
                                    <a class="nav-link" href="/Login?handler=Logout">Logout</a>
                                </div>
                            </div>
                        </li>
                    }
                    @if (!(bool)CUser.LoginStatus)
                    {
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold " href="/Customer/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link font-weight-bold " href="/Login">Login</a>
                        </li>
                    }
                    <li class="nav-item mt-2" @ViewData["CustomerBasketVisibility"]>
                            <a class="nav-link font-weight-bold badge text-nowrap" href="/Order/Checkout">
                                <div class="col-auto">
                                    <img src="~/Images/ShoppingCart.png" style="height:30px; width:30px;" />
                                    <font class="mt-sm-1" size="+1"><span class="badge badge-dark"> @ViewData["BasketCount"]</span></font>
                                </div>
                            </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>